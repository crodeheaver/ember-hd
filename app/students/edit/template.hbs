<h1>Edit</h1>
<div class="form-horizontal">
  <div class="form-group">
      <label class="col-sm-2 control-label">UCID</label>
      <div class="col-sm-10">
          {{input type="text" value=model.ucid class="form-control" placeholder="UCID"}}
      </div>
  </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">First Name</label>
        <div class="col-sm-10">
            {{input type="text" value=model.firstName class="form-control" placeholder="first name"}}
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Last Name</label>
        <div class="col-sm-10">
            {{input type="text" value=model.lastName class="form-control" placeholder="last name"}}
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Major</label>
        <div class="col-sm-10">
            {{input type="text" value=model.major class="form-control" placeholder="major"}}
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Ethnicity</label>
        <div class="col-sm-10">
            {{input type="text" value=model.ethnicity class="form-control" placeholder="ethnicity"}}
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Highschool Name</label>
        <div class="col-sm-10">
            {{input type="text" value=model.highschoolName class="form-control" placeholder="Name of highschool"}}
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">SDA</label>
        <div class="col-sm-10">
            {{input type="checkbox" checked=model.isSda class="form-control" placeholder="SDA?"}}
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Date of Background Check</label>
        <div class="col-sm-10">
          {{bootstrap-datepicker placeholder="Date of Backgroud Check" class="form-control" value=model.bgcheckDate}}
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Start Date</label>
        <div class="col-sm-10">
          {{bootstrap-datepicker placeholder="Start Date" class="form-control" value=model.startDate}}
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default" {{action "saveStudent" model}}>Save</button>
        </div>
    </div>
</div>
