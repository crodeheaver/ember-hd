<h2>Add a new student</h2>

<div class="form-horizontal">
  <div class="form-group">
      <label class="col-sm-2 control-label">UCID</label>
      <div class="col-sm-10">
          {{input type="text" value=model.ucid class="form-control" placeholder="UCID"}}
      </div>
  </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">First Name</label>
        <div class="col-sm-10">
            {{input type="text" value=model.first-name class="form-control" placeholder="first name"}}
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Last Name</label>
        <div class="col-sm-10">
            {{input type="text" value=model.last-name class="form-control" placeholder="last name"}}
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Major</label>
        <div class="col-sm-10">
            {{input type="text" value=model.major class="form-control" placeholder="major"}}
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Ethnicity</label>
        <div class="col-sm-10">
            {{input type="text" value=model.etchnicity class="form-control" placeholder="ethnicity"}}
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Highschool Name</label>
        <div class="col-sm-10">
            {{input type="text" value=model.highschool-name class="form-control" placeholder="Name of highschool"}}
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">SDA</label>
        <div class="col-sm-10">
            {{input type="text" value=model.is-sda class="form-control" placeholder="SDA?"}}
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Date of Background Check</label>
        <div class="col-sm-10">
            {{input type="date" value=model.bgcheck-date class="form-control" placeholder="Date of BackgroundCheck"}}
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Start Date</label>
        <div class="col-sm-10">
            {{input type="date" value=model.start-date class="form-control" placeholder="Start Date"}}
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-default" {{action 'addStudent' model}}>Add Student</button>
        </div>
    </div>
</div>
