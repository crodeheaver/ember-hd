<div class="form-group">
    <label class="col-sm-2 control-label">{{label}}</label>
    <div class="col-sm-10">
      <table class='table table-striped table-hover'>
        <thead>
          <tr>
            <th>
              Test Name
            </th>
            <th>
              Score
            </th>
            <th>
              Date Taken
            </th>
            <th>
              <button class="btn btn-primary btn-xs" {{action 'addClicked' tests}}>{{fa-icon "plus"}}</button>
            </th>
          </tr>
        </thead>
        <tbody>
          {{#each tests as |test|}}
          <tr>
            <td>
              {{input type=text value=test.name class="form-control" placeholder="Test Name"}}
            </td>
            <td>
              {{input type=text value=test.score class="form-control" placeholder="Score"}}
            </td>
            <td>
              {{bootstrap-datepicker value=test.dateTaken placeholder="Begin Date" class="form-control"}}
            </td>
            <td>
              <button class="btn btn-danger btn-xs" {{action 'deleteClicked' tests test}}>{{fa-icon "minus"}}</button>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>

    </div>
</div>
