<div class="form-group">
    <label class="col-sm-2 control-label">{{label}}</label>
    <div class="col-sm-10">
      <table class='table table-striped table-hover'>
        <thead>
          <tr>
            <th>
              School Name
            </th>
            <th>
              Teacher Name
            </th>
            <th>
              Begin Date
            </th>
            <th>
              End Date
            </th>
            <th>
              Contract
            </th>
            <th>
              Practicum
            </th>
            <th>
              CT Eval
            </th>
            <th>
              CT Reflexive Questions
            </th>
            <th>
              <button class="btn btn-primary btn-xs" {{action 'addClicked' model}}>{{fa-icon "plus"}}</button>
            </th>
          </tr>
        </thead>
        <tbody>
          {{#each model.stTeaching as |exp|}}
          <tr>
            <td>
              {{input type=type value=exp.schoolName class="form-control" placeholder="School Name"}}
            </td>
            <td>
              {{input type=type value=exp.teacherName class="form-control" placeholder="Teacher Name"}}
            </td>
            <td>
              {{bootstrap-datepicker value=exp.beginDate placeholder="Begin Date" class="form-control"}}
            </td>
            <td>
              {{bootstrap-datepicker value=exp.endDate placeholder="End Date" class="form-control"}}
            </td>
            <td>
              {{input type=type checked=exp.contract class="form-control" placeholder="Contract"}}
            </td>
            <td>
              {{input type=type checked=exp.practicum class="form-control" placeholder="Practicum"}}
            </td>
            <td>
              {{input type=type checked=exp.ctEval class="form-control" placeholder="CT Eval"}}
            </td>
            <td>
              {{input type=type checked=exp.ctRefQuestions class="form-control" placeholder="CT Reflexive Questions"}}
            </td>
            <td>
              <button class="btn btn-danger btn-xs" {{action 'deleteClicked' model exp}}>{{fa-icon "minus"}}</button>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>

    </div>
</div>
