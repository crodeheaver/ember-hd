<table class='table table-striped table-hover'>
  <thead>
    <tr>
      <th>
        UCID
      </th>
      <th>
        Name
      </th>
      <th>
        Major
      </th>
      <th>
      </th>
    </tr>
  </thead>
  <tbody>
    {{#each students as |student|}}
    {{#link-to 'students.edit' student.id tagName="tr"}}
      <td>
        {{ student.ucid }}
      </td>
      <td>
        {{ student.firstName }} {{ student.lastName }}
      </td>
      <td>
        {{ student.major }}
      </td>
      <td>
        <button class="btn btn-danger btn-xs" {{action 'deleteButton' student}}>Delete</button>
      </td>
    {{/link-to}}
    {{/each}}
  </tbody>
</table>
